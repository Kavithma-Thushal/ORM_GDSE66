<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse66.hibernate.controller.ItemFormController">
    <children>
        <Label focusTraversable="false" layoutX="216.0" layoutY="35.0" text="Manage Items">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>
        <TextField fx:id="txtCode" focusTraversable="false" layoutX="87.0" layoutY="140.0" promptText="code"/>
        <TextField fx:id="txtDescription" focusTraversable="false" layoutX="349.0" layoutY="140.0"
                   promptText="description"/>
        <TextField fx:id="txtUnitPrice" focusTraversable="false" layoutX="87.0" layoutY="210.0"
                   promptText="unit price"/>
        <TextField fx:id="txtQtyOnHand" focusTraversable="false" layoutX="349.0" layoutY="210.0"
                   promptText="quantity on hand"/>
        <Button focusTraversable="false" layoutX="87.0" layoutY="300.0" mnemonicParsing="false" onAction="#saveOnAction"
                prefHeight="31.0" prefWidth="77.0" text="Save"/>
        <Button focusTraversable="false" layoutX="197.0" layoutY="300.0" mnemonicParsing="false"
                onAction="#searchOnAction" prefWidth="77.0" text="Search"/>
        <Button focusTraversable="false" layoutX="349.0" layoutY="300.0" mnemonicParsing="false"
                onAction="#updateOnAction" prefWidth="77.0" text="Update"/>
        <Button focusTraversable="false" layoutX="459.0" layoutY="300.0" mnemonicParsing="false"
                onAction="#deleteOnAction" prefWidth="77.0" text="Delete"/>
        <ImageView fitHeight="36.0" fitWidth="38.0" layoutX="24.0" layoutY="24.0" onMouseClicked="#backOnAction"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/back.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
